<Window x:Class="ECGapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECGapp"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        mc:Ignorable="d"
        Title="ECG" Height="570.312" Width="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <!-- The OxyPlot control is binding to a PlotModel in the MainViewModel -->
        <oxy:PlotView x:Name="graphECG" Model="{Binding ECGModel}" Margin="0,38,9.6,119.8" />
        <TextBox x:Name="tbIP" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="49,7,0,0"/>
        <Label Content="IP:" HorizontalAlignment="Left" Margin="12,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.982,0.371"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="266,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="637,7,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbStatus" Content="Disconnected" HorizontalAlignment="Left" Margin="682,7,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
